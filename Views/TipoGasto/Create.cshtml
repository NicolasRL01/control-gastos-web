@model ControlGastosWeb.Models.TipoGasto
@{
    ViewData["Title"] = "Crear Tipo de Gasto";
}

<div class="row">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-body">
                    <!-- Campo oculto para el código - se llenará automáticamente -->
                    <input asp-for="Codigo" type="hidden" />

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Alimentación, Transporte, Educación" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Mensaje informativo -->
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Nota:</strong> El código se generará automáticamente (TG001, TG002, etc.)
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Regresar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}