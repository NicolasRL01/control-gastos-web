@model ControlGastosWeb.Models.Presupuesto

@{
    ViewData["Title"] = "Nuevo Presupuesto";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">ðŸ“Š Crear Nuevo Presupuesto</h4>
            </div>
            <div class="card-body">
                <!-- Mensajes de error/Ã©xito -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post" action="/Presupuesto/Create">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="TipoGastoId" class="form-label">
                                    <i class="fas fa-tag"></i> Tipo de Gasto
                                </label>
                                <select name="TipoGastoId" id="TipoGastoId" class="form-select" required>
                                    <option value="">-- Seleccionar Tipo de Gasto --</option>
                                    @if (ViewData["TipoGastoId"] is SelectList tiposGasto)
                                    {
                                        @foreach (SelectListItem item in tiposGasto)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TipoGastoId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="Mes" class="form-label">
                                    <i class="fas fa-calendar"></i> Mes
                                </label>
                                <select name="Mes" id="Mes" class="form-select" required>
                                    <option value="">-- Mes --</option>
                                    <option value="1" @(DateTime.Now.Month == 1 ? "selected" : "")>Enero</option>
                                    <option value="2" @(DateTime.Now.Month == 2 ? "selected" : "")>Febrero</option>
                                    <option value="3" @(DateTime.Now.Month == 3 ? "selected" : "")>Marzo</option>
                                    <option value="4" @(DateTime.Now.Month == 4 ? "selected" : "")>Abril</option>
                                    <option value="5" @(DateTime.Now.Month == 5 ? "selected" : "")>Mayo</option>
                                    <option value="6" @(DateTime.Now.Month == 6 ? "selected" : "")>Junio</option>
                                    <option value="7" @(DateTime.Now.Month == 7 ? "selected" : "")>Julio</option>
                                    <option value="8" @(DateTime.Now.Month == 8 ? "selected" : "")>Agosto</option>
                                    <option value="9" @(DateTime.Now.Month == 9 ? "selected" : "")>Septiembre</option>
                                    <option value="10" @(DateTime.Now.Month == 10 ? "selected" : "")>Octubre</option>
                                    <option value="11" @(DateTime.Now.Month == 11 ? "selected" : "")>Noviembre</option>
                                    <option value="12" @(DateTime.Now.Month == 12 ? "selected" : "")>Diciembre</option>
                                </select>
                                <span asp-validation-for="Mes" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="Ano" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> AÃ±o
                                </label>
                                <input name="Ano" id="Ano" class="form-control" type="number"
                                       min="2020" max="2030" value="@DateTime.Now.Year" required />
                                <span asp-validation-for="Ano" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="MontoPresupuestado" class="form-label">
                            <i class="fas fa-dollar-sign"></i> Monto Presupuestado
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">â‚¡</span>
                            <input name="MontoPresupuestado" id="MontoPresupuestado" class="form-control"
                                   type="number" step="0.01" min="0.01" placeholder="0.00" required />
                        </div>
                        <span asp-validation-for="MontoPresupuestado" class="text-danger"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i> Ingrese el monto que planea gastar en este tipo de gasto durante el mes seleccionado.
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-lightbulb"></i>
                        <strong>Consejo:</strong> Un buen presupuesto te ayuda a controlar tus gastos.
                        Revisa tus gastos anteriores para establecer montos realistas.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/Presupuesto" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a Lista
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Crear Presupuesto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Script para debugging y validaciÃ³n
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Vista Create cargada');
            
            // Verificar si hay tipos de gasto
            const tipoGastoSelect = document.getElementById('TipoGastoId');
            console.log('Opciones de Tipo de Gasto:', tipoGastoSelect.options.length);
            
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                console.log('=== DEBUGGING FORMULARIO ===');
                console.log('TipoGastoId:', document.getElementById('TipoGastoId').value);
                console.log('Mes:', document.getElementById('Mes').value);
                console.log('Ano:', document.getElementById('Ano').value);
                console.log('MontoPresupuestado:', document.getElementById('MontoPresupuestado').value);

                // Validar que todos los campos estÃ©n llenos
                const tipoGasto = document.getElementById('TipoGastoId').value;
                const mes = document.getElementById('Mes').value;
                const ano = document.getElementById('Ano').value;
                const monto = document.getElementById('MontoPresupuestado').value;

                if (!tipoGasto || !mes || !ano || !monto) {
                    alert('Por favor complete todos los campos obligatorios');
                    e.preventDefault();
                    return false;
                }

                if (parseFloat(monto) <= 0) {
                    alert('El monto debe ser mayor que cero');
                    e.preventDefault();
                    return false;
                }

                console.log('Formulario vÃ¡lido, enviando...');
                return true;
            });
        });
    </script>
}
