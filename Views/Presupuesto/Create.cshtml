@model ControlGastosWeb.Models.Presupuesto

<h2>Crear Presupuesto</h2>

<form asp-action="Create">
    <div>
        <label asp-for="TipoGastoId">Tipo de Gasto</label>
        <select asp-for="TipoGastoId" asp-items="ViewBag.TipoGastoId">
            <option value="">Seleccionar</option>
        </select>
    </div>
    
    <div>
        <label asp-for="Mes">Mes</label>
        <input asp-for="Mes" type="number" min="1" max="12" />
    </div>
    
    <div>
        <label asp-for="Ano">AÃ±o</label>
        <input asp-for="Ano" type="number" value="2025" />
    </div>
    
    <div>
        <label asp-for="MontoPresupuestado">Monto</label>
        <input asp-for="MontoPresupuestado" type="number" step="0.01" />
    </div>
    
    <button type="submit">Crear</button>
    <a asp-action="Index">Cancelar</a>
</form>
