@model ControlGastosWeb.Models.FondoMonetario

@{
    ViewData["Title"] = "Editar Fondo Monetario";
}

<div class="row">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FechaCreacion" />
            <input type="hidden" asp-for="Activo" />

            <div class="card">
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Tipo" class="form-label"></label>
                        <select asp-for="Tipo" class="form-control">
                            <option value="">Seleccione un tipo</option>
                            <option value="Efectivo">Efectivo</option>
                            <option value="Cuenta Bancaria">Cuenta Bancaria</option>
                            <option value="Banco">Banco</option>
                            <option value="Tarjeta Débito">Tarjeta Débito</option>
                            <option value="Tarjeta Crédito">Tarjeta Crédito</option>
                            <option value="Digital">Digital</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SaldoInicial" class="form-label"></label>
                        <input asp-for="SaldoInicial" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="SaldoInicial" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SaldoActual" class="form-label"></label>
                        <input asp-for="SaldoActual" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="SaldoActual" class="text-danger"></span>
                        <small class="form-text text-muted">Ajuste manual del saldo actual</small>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Actualizar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Regresar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}