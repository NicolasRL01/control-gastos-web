@model IEnumerable<ControlGastosWeb.Models.FondoMonetario>

@{
    ViewData["Title"] = "Fondos Monetarios";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>

        <p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Crear Nuevo Fondo
            </a>
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                        <th>Saldo Inicial</th>
                        <th>Saldo Actual</th>
                        <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>
                                <span class="badge @(item.Tipo == "Efectivo" ? "bg-success" : item.Tipo == "Banco" ? "bg-primary" : "bg-info")">
                                    @Html.DisplayFor(modelItem => item.Tipo)
                                </span>
                            </td>
                            <td class="text-end">@item.SaldoInicial.ToString("C")</td>
                            <td class="text-end">
                                <strong class="@(item.SaldoActual >= 0 ? "text-success" : "text-danger")">
                                    @item.SaldoActual.ToString("C")
                                </strong>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>